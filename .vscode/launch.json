{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Debug - Customfile",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lfr/cmdline.py",
            "args": [
                "--outpath",
                "./out/",
                "--technology",
                "dropx",
                "${file}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - Customfile, NO GEN",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lfr/cmdline.py",
            "args": [
                "--no-gen",
                "--outpath",
                "./out/",
                "${file}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - Customfile, NO GEN (with distribute library)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lfr/cmdline.py",
            "args": [
                "--no-gen",
                "--outpath",
                "./out/",
                "--pre-load",
                "../LFR-Testcases/distribute-library",
                "${file}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - CLI TEST",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lfr/cmdline.py",
            "args": [
                "--no-gen",
                "--outpath",
                "./out/",
                "${workspaceFolder}/test/chthesis/rotary_cells.lfr",
                "${workspaceFolder}/test/distribute-library/mux_04_in.lfr",
                "${workspaceFolder}/test/distribute-library/mux_04_out.lfr"
            ],
            "console": "integratedTerminal"
        },

    ]
}